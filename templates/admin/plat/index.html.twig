{% extends "base.html.twig" %}

{% block title %}Liste des plats{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% include "_partials/_adminnav.html.twig" %}
            <main class="col-9 border border-light bg-white p-2">
                <h1>Liste des plats</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Photo</th>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Stock</th>
                            <th>Cat√©gorie</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for plat in plats %}
                            <tr>
                                <td>{{ plat.id }}</td>
                                <td><img src="{{ asset('assets/image/plat/300x300-' ~ plat.images[0].name ) }}" alt="{{ plat.name }}" class="img-thumbnail"></td>
                                <td>{{ plat.name }}</td>
                                <td>{{ plat.price / 100 }}</td>
                                <td>{{ plat.stock }}</td>
                                <td>{{ plat.categories.name }}</td>
                                <td>
                                    <a href="{{ path('admin_plat_edit', {id: plat.id})}}" class="btn btn-success">Modifier</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </main>
        </div>
    </div>
{% endblock %}